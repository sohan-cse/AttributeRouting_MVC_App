@using System.Globalization
@model IEnumerable<AttributeRouting_MVC_App.Models.Product>
@{
    ViewData["Title"] = "Product List";
}
<a asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>
<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
                <td>@product.Price.ToString("C",new CultureInfo("bn-BD"))</td>
            <td>@product.Stock</td>
            <td>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
